<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/rlMain">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px" android:layout_alignParentLeft="true"
            android:id="@+id/rlHeader"
            android:layout_alignParentBottom="false" android:layout_alignParentTop="true">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/HuiYuanZhongXin_JianYi_Title"
                android:id="@+id/textView"
                android:layout_alignParentTop="true" android:background="@drawable/titleback"
                android:textColor="@android:color/white" android:gravity="center_vertical|left" android:paddingLeft="10px"
                android:textSize="27px"/>
        <ImageButton
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtnRefresh" android:layout_alignRight="@+id/textView"
                android:layout_alignTop="@+id/textView" android:layout_alignBottom="@+id/textView"
                android:scaleType="fitCenter" android:src="@drawable/refresh"
                android:background="@android:color/transparent" android:padding="5px"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@+id/rlBody" android:layout_below="@+id/rlHeader"
            android:layout_above="@+id/rlFooter" android:background="#f3f3f3">
        <ImageView
                android:layout_width="465px"
                android:layout_height="480px"
                android:id="@+id/imageView" android:layout_alignParentLeft="true" android:layout_marginLeft="7px"
                android:layout_alignParentTop="true" android:layout_marginTop="15px"
                android:background="@drawable/frameback"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="25px"
                android:text="@string/HuiYuanZhongXin_JianYi_ZhuTi_2"
                android:id="@+id/textView1"
                android:layout_marginLeft="20px"
                android:layout_marginTop="30px" android:textSize="22px" android:textIsSelectable="false"/>
        <EditText
                android:layout_width="440px"
                android:layout_height="40px"
                android:id="@+id/edtSubject"
                android:background="@drawable/edittext_back_2_long" android:textSize="22px" android:textColor="#606060"
                android:paddingLeft="10px" android:paddingRight="10px" android:gravity="center_vertical"
                android:layout_marginTop="65px"
                android:layout_marginLeft="20px" android:singleLine="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="25px"
                android:text="@string/HuiYuanZhongXin_JianYi_NeiRong_2"
                android:id="@+id/textView3"
                android:textSize="22px" android:textIsSelectable="false"
                android:layout_alignParentTop="true"
                android:layout_marginTop="205px" android:layout_marginLeft="20px"/>
        <EditText
                android:layout_width="440px"
                android:layout_height="240px"
                android:id="@+id/edtContent"
                android:layout_marginTop="235px"
                android:background="@drawable/frameback_2" android:textSize="22px" android:textColor="#606060"
                android:paddingLeft="10px" android:paddingRight="10px"
                android:paddingTop="5px" android:paddingBottom="5px" android:layout_alignParentTop="true"
                android:layout_marginLeft="20px" android:gravity="left|top"/>
        <TextView android:layout_width="wrap_content" android:layout_height="25px"
                  android:text="@string/HuiYuanZhongXin_JianYi_EmailAddress" android:id="@+id/textView1"
                  android:textSize="22px"
                  android:textIsSelectable="false"
                  android:layout_alignParentTop="true" android:layout_marginTop="120px"
                  android:layout_marginLeft="20px"/>
        <EditText android:layout_width="440px" android:layout_height="40px" android:id="@+id/txtJianYi_EmailAddress"
                  android:background="@drawable/edittext_back_2_long"
                  android:textSize="22px" android:textColor="#606060" android:paddingLeft="10px"
                  android:paddingRight="10px" android:gravity="center_vertical" android:singleLine="true"
                  android:layout_marginLeft="20px" android:layout_marginTop="150px"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px" android:layout_alignParentLeft="true"
            android:id="@+id/rlFooter"
            android:layout_alignParentBottom="true">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView28" android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="true" android:background="@color/orange"/>

        <ImageButton
                android:layout_width="96px"
                android:layout_height="57px"
                android:id="@+id/imgbtnBack"
                android:layout_alignParentBottom="true" android:background="#333333" android:scaleType="fitCenter"
                android:src="@drawable/backarraw" android:padding="7px"/>
        <ImageButton
                android:layout_width="285px"
                android:layout_height="57px"
                android:id="@+id/imageButton6"
                android:layout_alignParentBottom="true" android:background="#333333"
                android:padding="10px" android:layout_toRightOf="@+id/imageButton9"
                />
        <ImageButton
                android:layout_width="96px"
                android:layout_height="57px"
                android:id="@+id/imgbtnAccount"
                android:layout_alignParentBottom="true" android:background="@color/orange" android:scaleType="fitCenter"
                android:src="@drawable/personinfo" android:padding="10px" android:layout_toRightOf="@+id/imageButton6"/>

        <ImageButton
                android:layout_width="3px"
                android:layout_height="57px"
                android:id="@+id/imageButton9"
                android:layout_alignParentBottom="true" android:background="#333333" android:scaleType="fitXY"
                android:src="@drawable/footerseparator" android:layout_toRightOf="@+id/imgbtnBack"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/HuiYuanZhongXin_JianYi_QueDingTiJiao"
                android:id="@+id/txtSubmit"
                android:layout_alignTop="@+id/imageButton6" android:layout_alignBottom="@+id/imageButton6"
                android:layout_alignLeft="@+id/imageButton6" android:layout_alignRight="@+id/imageButton6"
                android:layout_marginTop="7px" android:layout_marginBottom="7px" android:layout_marginRight="55px"
                android:layout_marginLeft="35px" android:background="@drawable/orange_btn_back_3"
                android:gravity="center" android:textSize="27px" android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>
