                          android:text="@string/str_money_yuansymbol" android:id="@+id/txtShopPriceYuan"
                          android:textColor="@color/red" android:gravity="center_vertical" android:ellipsize="end"
                          android:singleLine="false" android:layout_toRightOf="@+id/txtShopPriceHead"
                          android:layout_alignTop="@+id/txtShopPriceHead" android:textSize="24px"/>
                <TextView android:layout_width="wrap_content" android:layout_height="30px"
                          android:text="321.44" android:id="@+id/txtShopPrice"
                          android:textColor="@color/red" android:gravity="center_vertical" android:ellipsize="end"
                          android:singleLine="false" android:layout_toRightOf="@+id/txtShopPriceYuan"
                          android:layout_alignTop="@+id/txtShopPriceHead" android:textSize="24px"/>
                <TextView android:layout_width="wrap_content" android:layout_height="30px"
                          android:text="@string/Articles_PreServePrice" android:id="@+id/txtHuiYuanHead"
                          android:textColor="@color/dark_gray" android:gravity="center_vertical" android:ellipsize="end"
                          android:singleLine="false" android:layout_alignLeft="@+id/txtShopPriceHead"
