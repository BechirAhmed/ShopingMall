                              android:text="@string/Articles_EvaluateBad" android:id="@+id/txtChaPingHead"
                              android:textColor="@color/gray" android:gravity="center"
                              android:layout_alignLeft="@+id/txtHaoPingHead" android:layout_below="@+id/txtZhongPingHead"
                              android:textSize="20px"/>
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="10px" android:id="@+id/rlSeperator"
                            android:background="@drawable/grayline" android:layout_below="@+id/txtChaPingHead">
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="200px"
                            android:layout_height="8px" android:layout_toRightOf="@+id/txtHaoPingHead"
                            android:layout_alignTop="@+id/txtHaoPingHead" android:layout_marginRight="5px"
                            android:layout_marginTop="11px" android:background="@color/red"
