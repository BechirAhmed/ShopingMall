                              android:id="@+id/txtMinus"
                              android:gravity="center|fill_vertical" android:textSize="27px" android:layout_alignParentRight="true"
                              android:layout_alignTop="@+id/txtPlus" android:textStyle="bold"
                              android:singleLine="true"/>
                    <TextView android:layout_width="30px" android:layout_height="fill_parent" android:text="1"
                              android:id="@+id/txtBuyAmount"
                              android:gravity="center" android:textSize="25px" android:layout_toRightOf="@+id/txtPlus"
                              android:layout_alignTop="@+id/txtPlus" android:layout_toLeftOf="@+id/txtMinus"
                              android:textColor="@color/black" android:background="@drawable/article_amount_back"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30px" android:layout_alignLeft="@+id/txtReserveAmountHead"
                        android:layout_below="@+id/txtBuyAmountHead" android:layout_marginRight="5px"
                        android:id="@+id/rlStandard1" android:layout_marginTop="5px">
                    <TextView android:layout_width="wrap_content" android:layout_height="30px"
                              android:text="@string/Articles_ArtStandard" android:id="@+id/txtStandard"
                              android:gravity="center_vertical" android:textColor="@color/dark_gray"
                              android:textSize="25px"
                              android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                            />
                    <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/hscrlArticlles_Standards_1"
                            android:layout_toRightOf="@+id/txtStandard"
                            android:layout_centerVertical="true">
                        <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/rlArticles_Standards_1">
                        </RelativeLayout>
                    </HorizontalScrollView>
                </RelativeLayout>
                <RelativeLayout android:layout_width="fill_parent" android:layout_height="30px"
                                android:layout_alignLeft="@+id/txtReserveAmountHead"
