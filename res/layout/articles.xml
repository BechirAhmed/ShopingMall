                          android:text="0.0" android:id="@+id/txtExtraPrice"
                          android:gravity="center_vertical" android:textColor="@color/red" android:textSize="25px"
                          android:layout_toRightOf="@+id/txtReserveAmountHead"
                          android:layout_alignTop="@+id/txtServePrice"/>
                <TextView android:layout_width="wrap_content" android:layout_height="30px"
                          android:text="@string/str_money_yuan" android:id="@+id/txtExtraYuan"
                          android:gravity="center_vertical" android:textColor="@color/dark_gray" android:textSize="25px"
                          android:layout_toRightOf="@+id/txtExtraPrice" android:layout_alignTop="@+id/txtServePrice"/>
                <ImageView
                        android:layout_width="28px"
                        android:layout_height="30px"
                        android:id="@+id/imgStar" android:layout_alignLeft="@+id/txtReserveAmountHead"
                        android:layout_below="@+id/txtServePrice" android:layout_marginTop="5px"
                        android:src="@drawable/staricon" android:scaleType="fitCenter"/>
                <TextView android:layout_width="wrap_content" android:layout_height="30px" android:text="@string/Articles_BuyArticle"
