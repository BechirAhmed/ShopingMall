                          android:textColor="@color/dark_gray" android:textSize="25px"
                          android:layout_alignLeft="@+id/txtReserveAmountHead"
                          android:layout_below="@+id/txtReserveAmountHead" android:layout_marginTop="5px"/>
                <RelativeLayout
                        android:layout_width="100px"
                        android:layout_height="30px" android:layout_toRightOf="@+id/txtReserveAmountHead"
                        android:background="@drawable/amount_back"
                        android:id="@+id/rlAmountSet" android:layout_alignTop="@+id/txtBuyAmountHead"
                        android:gravity="center">
                    <TextView
                            android:layout_width="30px"
                            android:layout_height="fill_parent"
