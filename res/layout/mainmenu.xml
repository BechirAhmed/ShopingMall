                android:id="@+id/lblMainMenu_Body_MainMenuHome"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:layout_alignTop="@+id/imgMainMenu_Body_MainMenuHome"
                android:layout_marginLeft="10px"
                android:textSize="24px"
                android:textColor="@color/white"
                android:gravity="left|center_vertical"
                android:layout_toRightOf="@+id/imgMainMenu_Body_MainMenuHome"
                android:text="@string/MainMenu_ZuiXinHuoDong" />

