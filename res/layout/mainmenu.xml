                        android:layout_width="fill_parent"
                        android:layout_height="100px"
                        android:id="@+id/imgItem1" android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true" android:src="@drawable/bmp1" android:scaleType="fitXY"
                        android:visibility="gone"/>
