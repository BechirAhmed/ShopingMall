                           android:src="@drawable/bmp4" android:scaleType="fitXY"
                           android:layout_alignLeft="@+id/imgItem1" android:layout_below="@+id/imgItem3"
                           android:layout_marginTop="15px" android:visibility="gone"/>
                <ImageView android:layout_width="fill_parent" android:layout_height="100px" android:id="@+id/imgItem5"
                           android:src="@drawable/bmp5" android:scaleType="fitXY"
                           android:layout_alignLeft="@+id/imgItem1" android:layout_below="@+id/imgItem4"
                           android:layout_marginTop="15px" android:visibility="gone"/>
                <ImageView android:layout_width="fill_parent" android:layout_height="100px" android:id="@+id/imgItem6"
