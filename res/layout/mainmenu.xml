                           android:src="@drawable/bmp2" android:scaleType="fitXY"
                           android:layout_alignLeft="@+id/imgItem1" android:layout_below="@+id/imgItem1"
                           android:layout_marginTop="15px" android:visibility="gone"/>
                <ImageView android:layout_width="fill_parent" android:layout_height="100px" android:id="@+id/imgItem3"
                           android:src="@drawable/bmp3" android:scaleType="fitXY"
                           android:layout_alignLeft="@+id/imgItem1" android:layout_below="@+id/imgItem2"
                           android:layout_marginTop="15px" android:visibility="gone"/>
