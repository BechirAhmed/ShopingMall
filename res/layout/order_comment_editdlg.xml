<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="400px"
                android:layout_height="320px" android:id="@+id/rlOrderCommentEditDlgMain" android:background="@drawable/popupdlg_back">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:text="给卖家留言"
            android:id="@+id/txtTitle"
            android:layout_alignTop="@+id/chkSelectItem" android:layout_marginLeft="10px"
            android:textColor="@color/black" android:textSize="22px" android:lines="2" android:ellipsize="end"
            android:gravity="top" android:layout_marginTop="10px"/>
    <Button android:layout_width="120px" android:layout_height="40px" android:id="@+id/btnConfirm"
               android:scaleType="fitXY"
               android:background="@drawable/btn_confirm"
               android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
               android:layout_marginTop="250px"/>
    <EditText
            android:layout_width="350px"
            android:layout_height="200px"
            android:id="@+id/txtComment"
            android:layout_centerHorizontal="true" android:layout_below="@+id/txtTitle"/>
</RelativeLayout>