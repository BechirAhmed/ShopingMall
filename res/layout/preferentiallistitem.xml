<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="60px" android:id="@+id/rlPreferListItemMain">

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="60px"
                    android:id="@+id/rlItemRow">
        <ImageView android:layout_width="40px" android:layout_height="40px" android:id="@+id/imgBranch"
                   android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                   android:layout_marginLeft="10px" android:layout_marginTop="10px" android:src="@drawable/preferfood"/>
        <TextView android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:id="@+id/txtItemName"
                  android:layout_toRightOf="@+id/imgBranch" android:gravity="center_vertical"
                  android:layout_marginLeft="10px" android:textSize="36px" android:textColor="@color/black"
                  android:text="@string/PreferentialBranchMain_Food"/>
    </RelativeLayout>
</RelativeLayout>