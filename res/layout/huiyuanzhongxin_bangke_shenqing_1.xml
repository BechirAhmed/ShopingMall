<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/rlMain">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px" android:layout_alignParentLeft="true"
            android:id="@+id/rlHeader"
            android:layout_alignParentBottom="false" android:layout_alignParentTop="true">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_1_Title"
                android:id="@+id/textView"
                android:layout_alignParentTop="true" android:background="@drawable/titleback"
                android:textColor="@android:color/white" android:gravity="center_vertical|left" android:paddingLeft="10px"
                android:textSize="27px"/>
        <ImageButton
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtnRefresh" android:layout_alignRight="@+id/textView"
                android:layout_alignTop="@+id/textView" android:layout_alignBottom="@+id/textView"
                android:scaleType="fitCenter" android:src="@drawable/refresh"
                android:background="@android:color/transparent" android:padding="5px"/>
    </RelativeLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_above="@+id/rlFooter"
            android:layout_below="@+id/rlHeader" android:background="#f3f3f3" android:fillViewport="false"
            android:padding="10px">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_alignParentLeft="true"
                android:id="@+id/rlBody"
                android:layout_alignParentBottom="true" android:layout_alignParentTop="true"
                android:background="@drawable/frameback">
            <TextView
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:text="1"
                    android:id="@+id/txtStep1No" android:layout_alignParentLeft="false" android:layout_marginLeft="20px"
                    android:layout_alignParentTop="false" android:layout_marginTop="40px"
                    android:background="@drawable/gray_circle" android:gravity="center" android:textSize="24px"
                    android:textColor="@color/red"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_Step_1"
                    android:id="@+id/txtStep1Name" android:layout_toRightOf="@+id/txtStep1No"
                    android:layout_alignTop="@+id/txtStep1No" android:textSize="22px" android:textStyle="bold"
                    android:layout_marginLeft="5px" android:layout_alignBottom="@+id/txtStep1No"
                    android:gravity="center_vertical"/>
            <TextView
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:text="2"
                    android:id="@+id/txtStep2No" android:layout_alignParentLeft="false" android:layout_marginLeft="165px"
                    android:layout_alignParentTop="false"
                    android:background="@drawable/gray_circle" android:gravity="center" android:textSize="24px"
                    android:textColor="#606060" android:layout_alignTop="@+id/txtStep1No"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_Step_2"
                    android:id="@+id/txtStep2Name" android:layout_toRightOf="@+id/txtStep2No"
                    android:layout_alignTop="@+id/txtStep1No" android:textSize="22px"
                    android:layout_marginLeft="5px" android:layout_alignBottom="@+id/txtStep1No"
                    android:gravity="center_vertical" android:textColor="#606060"/>
            <TextView
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:text="3"
                    android:id="@+id/txtStep3No" android:layout_alignParentLeft="false" android:layout_marginLeft="325px"
                    android:layout_alignParentTop="false"
                    android:background="@drawable/gray_circle" android:gravity="center" android:textSize="24px"
                    android:textColor="#606060" android:layout_alignTop="@+id/txtStep1No"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_Step_3"
                    android:id="@+id/txtStep3Name" android:layout_toRightOf="@+id/txtStep3No"
                    android:layout_alignTop="@+id/txtStep1No" android:textSize="22px"
                    android:layout_marginLeft="5px" android:layout_alignBottom="@+id/txtStep1No"
                    android:gravity="center_vertical" android:textColor="#606060"/>

            <TextView
                    android:layout_width="410px"
                    android:layout_height="40px"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_1_XingMing"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/txtStep1No" android:layout_marginTop="30px"
                    android:background="@drawable/edittext_back_2_long" android:textSize="22px" android:textColor="#606060"
                    android:paddingLeft="15px" android:paddingRight="10px" android:gravity="center_vertical"
                    android:layout_alignLeft="@+id/txtStep1No" android:layout_marginLeft="10px"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtName" android:layout_alignLeft="@+id/textView8"
                    android:layout_alignTop="@+id/textView8" android:layout_alignBottom="@+id/textView8"
                    android:layout_alignRight="@+id/textView8" android:layout_marginLeft="80px" android:textSize="22px"
                    android:password="false" android:background="@android:color/transparent"
                    android:layout_marginRight="10px" android:singleLine="true"/>

            <TextView
                    android:layout_width="410px"
                    android:layout_height="40px"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_1_ShenFenZheng"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/textView8" android:layout_marginTop="10px"
                    android:background="@drawable/edittext_back_2_long" android:textSize="22px" android:textColor="#606060"
                    android:paddingRight="10px" android:gravity="center_vertical"
                    android:layout_alignLeft="@+id/textView8" android:paddingLeft="10px"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtIDCardNo" android:layout_alignLeft="@+id/textView9"
                    android:layout_alignTop="@+id/textView9" android:layout_alignBottom="@+id/textView9"
                    android:layout_alignRight="@+id/textView9" android:layout_marginLeft="140px" android:textSize="22px"
                    android:password="false" android:background="@android:color/transparent"
                    android:layout_marginRight="10px" android:singleLine="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_1_YinHangKa"
                    android:id="@+id/textView10" android:layout_alignLeft="@+id/textView8"
                    android:layout_alignParentTop="false" android:layout_marginTop="40px"
                    android:layout_below="@+id/textView9" android:textColor="#606060" android:textSize="22px"
                    android:layout_alignRight="@+id/textView9"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:id="@+id/edtBankCard" android:textSize="22px"
                    android:password="false" android:background="@drawable/edittext_back_2_long"
                    android:layout_alignLeft="@+id/textView10" android:singleLine="true"
                    android:layout_below="@+id/textView10" android:layout_alignRight="@+id/textView10"
                    android:layout_marginTop="5px" android:paddingLeft="10px" android:paddingRight="10px"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_1_YinHang"
                    android:id="@+id/textView11" android:layout_alignLeft="@+id/textView10"
                    android:layout_alignParentTop="false" android:layout_marginTop="20px"
                    android:layout_below="@+id/edtBankCard" android:textColor="#606060" android:textSize="22px"
                    android:layout_alignRight="@+id/textView10"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:id="@+id/edtBank" android:textSize="22px"
                    android:password="false" android:background="@drawable/edittext_back_2_long"
                    android:layout_alignLeft="@+id/textView11" android:singleLine="true"
                    android:layout_below="@+id/textView11" android:layout_alignRight="@+id/textView11"
                    android:layout_marginTop="5px" android:paddingLeft="10px" android:paddingRight="10px"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_1_ZhuYiZhiFuBao"
                    android:id="@+id/textView12" android:layout_alignLeft="@+id/textView10"
                    android:layout_alignParentTop="false" android:layout_marginTop="5px"
                    android:layout_below="@+id/edtBank" android:textColor="#606060" android:textSize="18px"
                    android:layout_alignRight="@+id/textView10"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_1_QiTaMiaoShu"
                    android:id="@+id/textView13" android:layout_alignLeft="@+id/textView10"
                    android:layout_alignParentTop="false" android:layout_marginTop="30px"
                    android:layout_below="@+id/textView12" android:textColor="#606060" android:textSize="22px"
                    android:layout_alignRight="@+id/textView10"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="135px"
                    android:id="@+id/edtDesc" android:textSize="22px"
                    android:password="false" android:background="@drawable/frameback_3"
                    android:layout_alignLeft="@+id/textView13"
                    android:layout_below="@+id/textView13" android:layout_alignRight="@+id/textView13"
                    android:layout_marginTop="5px" android:paddingLeft="10px" android:paddingRight="10px"
                    android:paddingTop="10px" android:paddingBottom="10px" android:gravity="top"/>
            <ImageView
                    android:layout_width="450px"
                    android:layout_height="1px"
                    android:id="@+id/imageView1" android:layout_alignParentTop="false"
                    android:layout_below="@+id/edtDesc"
                    android:layout_marginTop="30px" android:layout_marginLeft="20px" android:layout_marginRight="20px"
                    android:background="@drawable/line_separator"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKe_ShenQing_1_ZiLiaoYaoQiu"
                    android:id="@+id/textView14" android:layout_alignLeft="@+id/imageView1"
                    android:layout_alignTop="@+id/imageView1" android:textSize="18px"
                    android:layout_alignRight="@+id/imageView1" android:layout_marginTop="10px"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txtRule" android:layout_alignLeft="@+id/textView14"
                    android:layout_below="@+id/textView14" android:layout_alignRight="@+id/textView14"
                    android:textSize="18px" android:textColor="#606060"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px" android:layout_alignParentLeft="true"
            android:id="@+id/rlFooter"
            android:layout_alignParentBottom="true">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView28" android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="true" android:background="@color/orange"/>

        <ImageButton
                android:layout_width="96px"
                android:layout_height="57px"
                android:id="@+id/imgbtnBack"
                android:layout_alignParentBottom="true" android:background="#333333" android:scaleType="fitCenter"
                android:src="@drawable/backarraw" android:padding="7px"/>
        <ImageButton
                android:layout_width="285px"
                android:layout_height="57px"
                android:id="@+id/imageButton6"
                android:layout_alignParentBottom="true" android:background="#333333"
                android:padding="10px" android:layout_toRightOf="@+id/imageButton9"
                />
        <ImageButton
                android:layout_width="96px"
                android:layout_height="57px"
                android:id="@+id/imgbtnAccount"
                android:layout_alignParentBottom="true" android:background="@color/orange" android:scaleType="fitCenter"
                android:src="@drawable/personinfo" android:padding="10px" android:layout_toRightOf="@+id/imageButton6"/>

        <ImageButton
                android:layout_width="3px"
                android:layout_height="57px"
                android:id="@+id/imageButton9"
                android:layout_alignParentBottom="true" android:background="#333333" android:scaleType="fitXY"
                android:src="@drawable/footerseparator" android:layout_toRightOf="@+id/imgbtnBack"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:text="@string/next"
                android:id="@+id/txtNext"
                android:layout_alignTop="@+id/imageButton6" android:layout_alignBottom="@+id/imageButton6"
                android:layout_alignLeft="@+id/imageButton6" android:layout_alignRight="@+id/imageButton6"
                android:layout_marginTop="7px" android:layout_marginBottom="7px" android:layout_marginRight="70px"
                android:layout_marginLeft="50px" android:background="@drawable/orange_btn_back_3"
                android:gravity="center" android:textSize="27px" android:textColor="@color/white"/>
        <ImageButton
                android:layout_width="150px"
                android:layout_height="60px"
                android:id="@+id/btnNext" android:layout_alignTop="@+id/txtNext"
                android:layout_alignLeft="@+id/txtNext" android:layout_alignBottom="@+id/txtNext"
                android:layout_alignRight="@+id/txtNext" android:background="@drawable/btn_empty_orange3"
                />
    </RelativeLayout>
</RelativeLayout>
