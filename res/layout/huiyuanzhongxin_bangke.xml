<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#f3f3f3" android:id="@+id/rlMain">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px" android:layout_alignParentLeft="true"
            android:id="@+id/rlHeader"
            android:layout_alignParentBottom="false" android:layout_alignParentTop="true">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/HuiYuanZhongXin_WoDeBangKe"
                android:id="@+id/textView"
                android:layout_alignParentTop="true" android:background="@drawable/titleback"
                android:textColor="@android:color/white" android:gravity="center_vertical|left" android:paddingLeft="10px"
                android:textSize="27px"/>
        <ImageButton
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtnRefresh" android:layout_alignRight="@+id/textView"
                android:layout_alignTop="@+id/textView" android:layout_alignBottom="@+id/textView"
                android:scaleType="fitCenter" android:src="@drawable/refresh"
                android:background="@android:color/transparent" android:padding="5px"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px" android:layout_alignParentLeft="true"
            android:id="@+id/rlFooter"
            android:layout_alignParentBottom="true">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView28" android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="true" android:background="@color/orange"/>

        <ImageButton
                android:layout_width="96px"
                android:layout_height="57px"
                android:id="@+id/imgbtnBack"
                android:layout_alignParentBottom="true" android:background="#333333" android:scaleType="fitCenter"
                android:src="@drawable/backarraw" android:padding="7px"/>
        <ImageButton
                android:layout_width="285px"
                android:layout_height="57px"
                android:id="@+id/imageButton6"
                android:layout_alignParentBottom="true" android:background="#333333"
                android:padding="10px" android:layout_toRightOf="@+id/imageButton9"
                />
        <ImageButton
                android:layout_width="96px"
                android:layout_height="57px"
                android:id="@+id/imgbtnAccount"
                android:layout_alignParentBottom="true" android:background="@color/orange" android:scaleType="fitCenter"
                android:src="@drawable/personinfo" android:padding="10px" android:layout_toRightOf="@+id/imageButton6"/>

        <ImageButton
                android:layout_width="3px"
                android:layout_height="57px"
                android:id="@+id/imageButton9"
                android:layout_alignParentBottom="true" android:background="#333333" android:scaleType="fitXY"
                android:src="@drawable/footerseparator" android:layout_toRightOf="@+id/imgbtnBack"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/HuiYuanZhongXin_BangKe_WoYaoDang"
                android:id="@+id/txtToBeBangKe"
                android:layout_alignTop="@+id/imageButton6" android:layout_alignBottom="@+id/imageButton6"
                android:layout_alignLeft="@+id/imageButton6" android:layout_alignRight="@+id/imageButton6"
                android:layout_marginTop="10px" android:layout_marginBottom="10px" android:layout_marginRight="75px"
                android:layout_marginLeft="55px" android:background="@drawable/orange_btn_back_3"
                android:gravity="center" android:textSize="27px" android:textColor="@color/white"/>
        <ImageButton
                android:layout_width="130px"
                android:layout_height="60px"
                android:id="@+id/btnToBangKe" android:layout_alignTop="@+id/txtToBeBangKe"
                android:layout_alignLeft="@+id/txtToBeBangKe" android:layout_alignBottom="@+id/txtToBeBangKe"
                android:layout_alignRight="@+id/txtToBeBangKe" android:background="@drawable/btn_empty_orange3"/>
    </RelativeLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="330px"
            android:id="@+id/imageView" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false" android:layout_below="@+id/rlHeader"
            android:background="@drawable/frameback"
            android:layout_marginLeft="5px" android:layout_marginRight="5px" android:layout_marginTop="10px"/>
    <ImageView
            android:layout_width="369px"
            android:layout_height="55px"
            android:id="@+id/imageView1"
            android:layout_alignTop="@+id/imageView" android:layout_centerHorizontal="true"
            android:background="@drawable/bangke_intro" android:layout_marginTop="60px"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HuiYuanZhongXin_BangKe_WhatIsBangKe"
            android:id="@+id/textView1" android:layout_alignLeft="@+id/imageView"
            android:layout_alignTop="@+id/imageView" android:layout_marginTop="170px" android:layout_marginLeft="30px"
            android:textSize="22px" android:textColor="@color/black" android:textStyle="bold"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/HuiYuanZhongXin_BangKe_BangKeIs"
            android:id="@+id/textView2" android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1" android:textSize="22px" android:textColor="#666666"
            android:layout_marginRight="20px" android:layout_alignRight="@+id/imageView"/>
</RelativeLayout>