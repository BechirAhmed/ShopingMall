<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/rlMain">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px" android:layout_alignParentLeft="true"
            android:id="@+id/rlHeader"
            android:layout_alignParentBottom="false" android:layout_alignParentTop="true">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/HuiYuanZhongXin_BangKeZhongXin_Title"
                android:id="@+id/textView"
                android:layout_alignParentTop="true" android:background="@drawable/titleback"
                android:textColor="@android:color/white" android:gravity="center_vertical|left" android:paddingLeft="10px"
                android:textSize="27px"/>
        <ImageButton
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtnRefresh" android:layout_alignRight="@+id/textView"
                android:layout_alignTop="@+id/textView" android:layout_alignBottom="@+id/textView"
                android:scaleType="fitCenter" android:src="@drawable/refresh"
                android:background="@android:color/transparent" android:padding="5px"/>
    </RelativeLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_above="@+id/rlFooter"
            android:layout_below="@+id/rlHeader" android:background="#f3f3f3" android:fillViewport="true">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_alignParentLeft="true"
                android:id="@+id/rlBody"
                android:layout_alignParentBottom="true" android:layout_alignParentTop="true">
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="240px"
                    android:id="@+id/imageView" android:background="@drawable/frameback"
                    android:layout_marginLeft="5px" android:layout_marginTop="10px" android:layout_marginRight="5px"
                    android:layout_marginBottom="10px"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKeZhongXin_WoDeBangBi"
                    android:id="@+id/textView2" android:layout_alignParentLeft="false" android:layout_marginLeft="25px"
                    android:layout_alignParentTop="false" android:layout_marginTop="25px"
                    android:gravity="center" android:textSize="22px"
                    />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:text="152021" android:singleLine="true"
                    android:id="@+id/edtBangBi" android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2" android:layout_marginTop="10px"
                    android:background="@drawable/edittext_back_2_long" android:textSize="22px"
                    android:paddingLeft="15px" android:layout_alignRight="@+id/imageView"
                    android:layout_marginRight="20px"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:text="@string/HuiYuanZhongXin_BangKeZhongXin_BangBiShenQingGuiZe"
                    android:id="@+id/txtBangBiApplyRule" android:layout_alignLeft="@+id/edtBangBi"
                    android:layout_below="@+id/edtBangBi" android:layout_marginTop="15px"
                    android:layout_alignRight="@+id/edtBangBi" android:paddingLeft="15px"
                    android:gravity="center_vertical" android:textColor="#606060" android:textSize="20px"
                    android:background="@drawable/edittext_back_2_long"/>
            <ImageView
                    android:layout_width="70px"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1" android:layout_alignRight="@+id/edtBangBi"
                    android:layout_alignTop="@+id/txtBangBiApplyRule" android:layout_alignBottom="@+id/txtBangBiApplyRule"
                    android:scaleType="fitCenter" android:src="@drawable/directionicon" android:padding="10px"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:text="@string/HuiYuanZhongXin_BangKeZhongXin_BangBiJiLu"
                    android:id="@+id/txtBangBiHistory" android:layout_alignLeft="@+id/edtBangBi"
                    android:layout_below="@+id/imageView1" android:layout_marginTop="15px"
                    android:layout_alignRight="@+id/edtBangBi" android:paddingLeft="15px"
                    android:gravity="center_vertical" android:textColor="#606060" android:textSize="20px"
                    android:background="@drawable/edittext_back_2_long"/>
            <ImageView
                    android:layout_width="70px"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2" android:layout_alignRight="@+id/edtBangBi"
                    android:layout_alignTop="@+id/txtBangBiHistory" android:layout_alignBottom="@+id/txtBangBiHistory"
                    android:scaleType="fitCenter" android:src="@drawable/directionicon" android:padding="10px"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="410px"
                    android:id="@+id/imageView3" android:layout_alignLeft="@+id/imageView"
                    android:layout_below="@+id/imageView" android:layout_alignRight="@+id/imageView"
                    android:background="@drawable/frameback"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HuiYuanZhongXin_BangKeZhongXin_BangBiXinXi"
                    android:id="@+id/textView5" android:layout_alignLeft="@+id/imageView"
                    android:layout_alignTop="@+id/imageView3" android:layout_marginLeft="25px"
                    android:layout_marginTop="25px" android:textSize="22px"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25px"
                    android:text="@string/HuiYuanZhongXin_BangKeZhongXin_ShenFenZhengHao"
                    android:id="@+id/textView6" android:layout_alignLeft="@+id/textView5"
                    android:layout_marginTop="20px" android:textSize="22px" android:textIsSelectable="false"
                    android:layout_below="@+id/textView5" android:textColor="#606060"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40px" android:singleLine="true"
                    android:id="@+id/edtIDCardNo" android:layout_alignLeft="@+id/textView6"
                    android:layout_below="@+id/textView6" android:layout_marginTop="5px"
                    android:background="@drawable/edittext_back_2_long" android:textSize="22px"
                    android:paddingLeft="10px" android:paddingRight="10px" android:gravity="center_vertical"
                    android:layout_alignRight="@+id/imageView3" android:layout_marginRight="25px"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25px"
                    android:text="@string/HuiYuanZhongXin_BangKeZhongXin_BangDingYinHangKa"
                    android:id="@+id/textView7" android:layout_alignLeft="@+id/textView6"
                    android:layout_marginTop="10px" android:textSize="22px" android:textIsSelectable="false"
                    android:layout_below="@+id/edtIDCardNo" android:textColor="#606060"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40px" android:singleLine="true"
                    android:id="@+id/edtBankCard" android:layout_alignLeft="@+id/textView7"
                    android:layout_below="@+id/textView7" android:layout_marginTop="5px"
                    android:background="@drawable/edittext_back_2_long" android:textSize="22px"
                    android:paddingLeft="10px" android:paddingRight="10px" android:gravity="center_vertical"
                    android:layout_alignRight="@+id/edtIDCardNo"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25px"
                    android:text="@string/HuiYuanZhongXin_BangKeZhongXin_KaiKaYinHang"
                    android:id="@+id/textView8" android:layout_alignLeft="@+id/textView7"
                    android:layout_marginTop="10px" android:textSize="22px" android:textIsSelectable="false"
                    android:layout_below="@+id/edtBankCard" android:textColor="#606060"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40px" android:singleLine="true"
                    android:id="@+id/edtBank" android:layout_alignLeft="@+id/textView8"
                    android:layout_below="@+id/textView8" android:layout_marginTop="5px"
                    android:background="@drawable/edittext_back_2_long" android:textSize="22px"
                    android:paddingLeft="10px" android:paddingRight="10px" android:gravity="center_vertical"
                    android:layout_alignRight="@+id/edtBankCard"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25px"
                    android:text="@string/HuiYuanZhongXin_BangKeZhongXin_ShenQingJieGuo"
                    android:id="@+id/textView9" android:layout_alignLeft="@+id/textView8"
                    android:layout_marginTop="10px" android:textSize="22px" android:textIsSelectable="false"
                    android:layout_below="@+id/edtBank" android:textColor="#606060"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40px" android:singleLine="true"
                    android:id="@+id/edtApplyResult" android:layout_alignLeft="@+id/textView9"
                    android:layout_below="@+id/textView9" android:layout_marginTop="5px"
                    android:background="@drawable/edittext_back_2_long" android:textSize="22px"
                    android:paddingLeft="10px" android:paddingRight="10px" android:gravity="center_vertical"
                    android:layout_alignRight="@+id/edtBank" android:editable="true"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px" android:layout_alignParentLeft="true"
            android:id="@+id/rlFooter"
            android:layout_alignParentBottom="true">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView28" android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="true" android:background="@color/orange"/>

        <ImageButton
                android:layout_width="96px"
                android:layout_height="57px"
                android:id="@+id/imgbtnBack"
                android:layout_alignParentBottom="true" android:background="#333333" android:scaleType="fitCenter"
                android:src="@drawable/backarraw" android:padding="7px"/>
        <ImageButton
                android:layout_width="285px"
                android:layout_height="57px"
                android:id="@+id/imageButton6"
                android:layout_alignParentBottom="true" android:background="#333333"
                android:padding="10px" android:layout_toRightOf="@+id/imageButton9"
                />
        <ImageButton
                android:layout_width="96px"
                android:layout_height="57px"
                android:id="@+id/imgbtnAccount"
                android:layout_alignParentBottom="true" android:background="@color/orange" android:scaleType="fitCenter"
                android:src="@drawable/personinfo" android:padding="10px" android:layout_toRightOf="@+id/imageButton6"/>

        <ImageButton
                android:layout_width="3px"
                android:layout_height="57px"
                android:id="@+id/imageButton9"
                android:layout_alignParentBottom="true" android:background="#333333" android:scaleType="fitXY"
                android:src="@drawable/footerseparator" android:layout_toRightOf="@+id/imgbtnBack"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/HuiYuanZhongXin_BangKeZhongXin_ShenQingTiXian"
                android:id="@+id/txtSubmit"
                android:layout_alignTop="@+id/imageButton6" android:layout_alignBottom="@+id/imageButton6"
                android:layout_alignLeft="@+id/imageButton6" android:layout_alignRight="@+id/imageButton6"
                android:layout_marginTop="7px" android:layout_marginBottom="7px" android:layout_marginRight="50px"
                android:layout_marginLeft="40px" android:background="@drawable/orange_btn_back_3"
                android:gravity="center" android:textSize="27px" android:textColor="@color/white"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSubmit" android:layout_alignTop="@+id/txtSubmit"
                android:layout_alignLeft="@+id/txtSubmit" android:layout_alignBottom="@+id/txtSubmit"
                android:layout_alignRight="@+id/txtSubmit" android:background="@drawable/btn_empty_orange3"/>
    </RelativeLayout>
</RelativeLayout>
