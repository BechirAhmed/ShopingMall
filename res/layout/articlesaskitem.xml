<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="150px" android:background="@color/white" android:id="@+id/rlAskItemMain">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:text="AAAAA"
            android:id="@+id/txtTitle" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_marginLeft="10px" android:layout_marginTop="10px" android:textColor="@color/black"
            android:textSize="18px"/>
    <TextView android:layout_width="wrap_content" android:layout_height="25px" android:text="2013-10-14 09:51:49"
              android:id="@+id/txtDate"
              android:textColor="@color/gray"
              android:textSize="18px" android:layout_toRightOf="@+id/txtTitle" android:layout_alignTop="@+id/txtTitle"
              android:layout_marginLeft="10px"/>
    <TextView android:layout_width="wrap_content" android:layout_height="25px" android:text="@string/Articles_AskHead"
              android:id="@+id/txtAskHead"
              android:textColor="@color/black"
              android:textSize="18px" android:layout_alignLeft="@+id/txtTitle" android:layout_below="@+id/txtTitle"
              android:layout_marginTop="5px"/>
    <TextView android:layout_width="fill_parent" android:layout_height="25px" android:text="AAAAA"
              android:id="@+id/txtAskContent" android:textColor="@color/black" android:textSize="18px"
              android:layout_toRightOf="@+id/txtAskHead"
              android:layout_marginRight="5px" android:singleLine="true" android:layout_alignTop="@+id/txtAskHead"/>
    <TextView android:layout_width="fill_parent" android:layout_height="60px" android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
              android:id="@+id/txtContents"
              android:textColor="@color/red"
              android:textSize="18px" android:layout_alignLeft="@+id/txtTitle" android:layout_below="@+id/txtAskHead"
              android:layout_marginTop="10px" android:lines="2" android:ellipsize="end"
              android:layout_marginRight="10px"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="4px" android:layout_alignLeft="@+id/txtTitle"
            android:layout_below="@+id/txtContents" android:layout_alignRight="@+id/txtContents"
            android:background="@drawable/gray_dotline" android:layout_marginTop="10px">
    </RelativeLayout>
</RelativeLayout>